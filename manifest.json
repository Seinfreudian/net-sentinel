{
  "manifest_version": 3,
  "name": "Net Sentinel",
  "version": "2.0",
  "description": "Detects suspicious links and images using cybersecurity heuristics.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Advanced Link Scan"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
}
